<p id="notice"><%= notice %></p>

<h3>Список ролей</h3>

<table class="table table-striped" style="width: 200px">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @roles.each do |role| %>
      <tr>

        <td><%= link_to role.name , edit_role_path(role) %></td>
        <td><%= link_to 'Удалить', role, method: :delete, data: { confirm: 'Уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

