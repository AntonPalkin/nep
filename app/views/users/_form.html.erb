<%= form_for(@user) do |f| %>
    <%= f.label "ФИО" %><br>
    <%= f.text_field :name  %>
    <br>
    <%= f.label :email %><br>
    <%= f.text_field :email  %>
    <br>
    <%= f.label "Пароль" %><br>
    <%= f.text_field :password %>
    <br>
    <%= f.label "Повтор пароля" %><br>
    <%= f.text_field :password_confirmation %>
    <br>
    <%= f.label "Права", multiple: true %> (buh, admin, user)<br>
    <%= f.text_field :roles %><br>
    <br>
    <%= f.submit "Сохранить" %>
<% end %>