<%= form_for(@comp) do |f| %>
  <% if @comp.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@comp.errors.count, "error") %> prohibited this comp from being saved:</h2>
      <ul>
      <% @comp.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "Бренд" %><br>
    <%= f.text_field :brand %>
  </div>

  <div class="field">
    <%= f.label "Название" %><br>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label "Тип компании" %><br>
    <%= f.select :comp_type_id, CompType.all.map { |c| [c.comp_type, c.id] } %>
  </div>

  <div class="field">
    <%= f.label "Описание" %><br>
    <%= f.text_area :description %>
  </div>

  <% if ((@comp.comp_type_id == 2) and (request.original_url.split('/').last == 'edit')) %>
        <%= render partial: "comps/form_add_account", locals: { f: f }  %>
  <% end %>

  <div class="actions">
    <%= f.submit "Сохранить" %>
  </div>



<% end %>
